%div
  - if calendar_date.active?
    = form_with(model: calendar_date, url: [:admin, calendar_date]) do |f|
      = f.hidden_field :active, value: "0"
      = f.submit t('shared.models.calendar_date.actions.deactivate'), class: 'w-full py-2 px-3 text-gray-600 bg-gray-900 hover:text-gray-900 hover:bg-orange-500 transition rounded w-full flex justify-center cursor-pointer'
  - else
    = form_with(model: calendar_date, url: [:admin, calendar_date]) do |f|
      = f.hidden_field :active, value: "1"
      = f.submit t('shared.models.calendar_date.actions.activate'), class: 'w-full py-2 px-3 text-gray-900 bg-gray-200 hover:bg-green-500 transition rounded w-full flex justify-center cursor-pointer'

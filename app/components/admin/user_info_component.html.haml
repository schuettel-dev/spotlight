.flex.items-center{ id: to_dom_id, 'data-controller': 'admin--user-info', 'data-admin--user-info-user-id-value': user.id }
  .grow.flex.flex-col
    .flex.grow.items-baseline
      .grow.text-2xl.flex.items-baseline.gap-x-2
        %div.user--nickname
          = nickname
        %div.user--status-badge
          = render User::StatusBadgeComponent.new(status: user.status)
        .div.user--role-badge
          = role_badge

    .flex.text-gray-500.text-sm
      = t('shared.models.light_request.with_count', count: user.light_requests.size)
  .shrink-0.hidden{ 'data-admin--user-info-target': 'jsOnly' }
    - unless user.role_superadmin?
      = button_tag class: 'p-2', 'data-action': 'admin--user-info#toggleUserForm', role: :button do
        .h-5.w-5.text-gray-500{ 'data-admin--user-info-target': 'openFormIcon' }
          = render HeroiconComponent.new(:'chevron-down')
        .h-5.w-5.text-gray-500.hidden{ 'data-admin--user-info-target': 'closeFormIcon' }
          = render HeroiconComponent.new(:'chevron-up')

.devise
  %h2.text-center.text-sky-500 Sign up

  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field
      = f.label :nickname, class: 'label'
      = f.text_field :nickname, autofocus: true, class: "input"
    .field
      = f.label :email, class: 'label'
      = f.email_field :email, autocomplete: "email", class: "input"
    .field
      = f.label :password, class: 'label'
      - if @minimum_password_length
        %em.text-xs.text-sky-200
          (#{@minimum_password_length} characters minimum)
      = f.password_field :password, autocomplete: "new-password", class: "input"
    .actions.mt-10
      = f.submit "Sign up", class: "input button"
  = render "devise/shared/links"
